<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="src.persistence.models.Trip" table="trip" schema="public" catalog="tas">
        <id name="id">
            <column name="id" sql-type="int4" not-null="true"/>
        </id>
        <property name="name">
            <column name="name" sql-type="varchar"/>
        </property>
        <property name="cost">
            <column name="cost" sql-type="int4"/>
        </property>
    </class>
</hibernate-mapping>